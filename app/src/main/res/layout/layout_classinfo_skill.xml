<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/classInfo_viewsMargin"
    android:layout_marginRight="@dimen/classInfo_viewsMargin"
    android:id="@+id/class_info_skillLayout"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/classInfo_viewsMargin"
            android:gravity="center"
            android:layout_marginTop="45dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/class_info_skillIcon"
                android:src="@drawable/skill_0000252_icon"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:weightSum="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/contentColor"
                    android:text="이름이름이름"
                    android:textStyle="bold"
                    android:includeFontPadding="false"
                    android:id="@+id/class_info_skillName"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/contentColor"
                    android:text="[타입, 마스터레벨 00]"
                    android:includeFontPadding="false"
                    android:id="@+id/class_info_skillType"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/contentColor"
            android:text="skillInfo"
            android:id="@+id/class_info_skillInfo"
            android:layout_marginLeft="@dimen/classInfo_viewsMargin"
            android:layout_marginRight="@dimen/classInfo_viewsMargin"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/contentColor"
            android:text="skillDesc"
            android:id="@+id/class_info_skillDesc"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="@dimen/classInfo_viewsMargin"
            android:layout_marginRight="@dimen/classInfo_viewsMargin"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/contentColor"
            android:text="skillCoolTime"
            android:id="@+id/class_info_skillCoolTime"
            android:layout_marginLeft="@dimen/classInfo_viewsMargin"
            android:layout_marginRight="@dimen/classInfo_viewsMargin"
            android:layout_marginBottom="@dimen/classInfo_viewsMargin"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        android:background="@color/lineColor"/>
</LinearLayout>