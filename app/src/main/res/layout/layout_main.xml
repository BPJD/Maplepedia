<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    android:orientation="vertical">

    <!-- 툴바 -->
    <include layout="@layout/appbar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/adLout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

        <LinearLayout
            android:id="@+id/activity_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/classInfo_viewsMargin"
            android:layout_marginLeft="@dimen/classInfo_viewsMargin"
            android:layout_marginRight="@dimen/classInfo_viewsMargin"
            android:layout_marginTop="12dp"
            android:background="@drawable/app_design_background"
            android:backgroundTint="@color/backgroundColor"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/contentColor"
                    android:textSize="20dp"
                    android:text="메이플 백과사전 패치노트"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/classInfo_viewsMargin"
                    android:layout_marginBottom="@dimen/classInfo_viewsMargin"
                    android:background="@color/contentColor"
                    />

                <TextView
                    android:paddingTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" ○ 앱 시스템"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/contentColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="- 안드로이드 14에서 노티바(알림 창)이 노출됩니다."
                    android:textColor="@color/contentColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="- 안드로이드 14에서 [알람 및 리마인더] 권한을 받습니다. 노티바(알림 창)과 관련한 권한입니다."
                    android:textColor="@color/contentColor"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/contentColor"
                    android:textSize="20dp"
                    android:text="지난 업데이트"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/classInfo_viewsMargin"
                    android:layout_marginBottom="@dimen/classInfo_viewsMargin"
                    android:background="@color/contentColor"
                    />

                <TextView
                    android:paddingTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" ○ 앱 시스템"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/contentColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="- 안드로이드 14에서 노티바(알림 창)이 노출됩니다."
                    android:textColor="@color/contentColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="- 안드로이드 14에서 [알람 및 리마인더] 권한을 받습니다. 노티바(알림 창)과 관련한 권한입니다."
                    android:textColor="@color/contentColor"/>

                <TextView
                    android:paddingTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" ○ 참고 자료"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/contentColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="- 전문기술 레시피 정보를 추가했습니다. 전문기술 종류 별 주로 제작되는 아이템의 필요 재료와, 레시피의 수급처를 찾아볼 수 있습니다."
                    android:textColor="@color/contentColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="- 레시피는 [탭]이 아닌 [스피너] 시스템을 도입했습니다. 추후 업데이트에서 다른 화면에서도 [스피너]를 사용하는 것을 고려하고 있습니다."
                    android:textColor="@color/contentColor"/>

                <TextView
                    android:paddingTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" ○ 확인된 문제"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/contentColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="- 주문서 정보에서 방어구 스탯 100% 주문서 아이콘이 나오지 않습니다."
                    android:textColor="@color/contentColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="- 레시피 정보에서 [활전용 티타늄 화살] 아이콘이 나오지 않습니다. 주문서와 마찬가지로, 내부 시트의 첫 번째 항목만 아이콘이 나오지 않고 있습니다."
                    android:textColor="@color/contentColor"/>
            </LinearLayout>


        </LinearLayout>

        </ScrollView>


        <RelativeLayout
            android:id="@+id/adLout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.gms.ads.admanager.AdManagerAdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adManagerAdView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/googleAD">
            </com.google.android.gms.ads.admanager.AdManagerAdView>

            <com.adknowva.adlib.BannerAdView
                android:id="@+id/banner_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                />

            <com.gomfactory.adpie.sdk.AdView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/adpie_Tbanner"
                android:layout_centerHorizontal="true"
                slotID="653874a28c8d1d33fcd63fd6" >
            </com.gomfactory.adpie.sdk.AdView>

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>